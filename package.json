{
	"name": "caching-transform",
	"version": "4.0.0",
	"description": "Wraps a transform and provides caching",
	"license": "MIT",
	"repository": "istanbuljs/caching-transform",
	"engines": {
		"node": ">=10.13.0"
	},
	"scripts": {
		"pretest": "if-ver -ge 10.18 || exit 0; xo",
		"tests-only": "nyc -s --no-check-coverage node test.js | tap-yaml-summary",
		"test": "npm run -s tests-only",
		"posttest": "nyc report"
	},
	"files": [
		"index.js"
	],
	"keywords": [
		"transform",
		"cache",
		"require",
		"transpile",
		"fast",
		"speed",
		"hash"
	],
	"dependencies": {
		"hasha": "^5.0.0",
		"package-hash": "^4.0.0",
		"write-file-atomic": "^3.0.0"
	},
	"devDependencies": {
		"if-ver": "^1.1.0",
		"libtap": "^0.3.0",
		"nyc": "^15.0.0",
		"rimraf": "^3.0.0",
		"sinon": "^9.2.4",
		"tap-yaml-summary": "^0.1.0",
		"xo": "^0.37.1"
	},
	"nyc": {
		"reporter": [
			"lcov",
			"text"
		]
	}
}
